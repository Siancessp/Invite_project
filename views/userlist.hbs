<script>
    function toggleDropdowns() {
    const dropdowns = document.getElementById("dropdowns");
    if (dropdowns.style.display === "none") {
        dropdowns.style.display = "block";
    } else {
        dropdowns.style.display = "none";
    }
}
</script>